@model IEnumerable<DigitalHub.Models.Product>

@{
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
    ViewBag.Title = "Lịch sử xem sản phẩm";
    string currentAction = ViewContext.RouteData.Values["action"].ToString();
}

<div class="container my-5">
    <div class="row">
        <!-- Cột bên trái: Menu -->
        <div class="col-md-3">
            @Html.Partial("_LeftSidebar")
        </div>

        <!-- Cột bên phải: Nội dung -->
        <div class="col-md-9">
            <h2>Lịch sử xem sản phẩm</h2>
            <hr />
            @if (!Model.Any())
            {
                <p>Bạn chưa xem sản phẩm nào.</p>
            }
            else
            {
                <div class="row">
                    @foreach (var product in Model)
                    {
                        <div class="col-md-4 mb-4">
                            <div class="card h-100">
                                <img src="@Url.Content("~/Content/Images/" + product.ImagePro)" class="card-img-top" alt="@product.NamePro" />
                                <div class="card-body">
                                    <h5 class="card-title">@product.NamePro</h5>
                                    <p class="card-text">@String.Format("{0:N0}₫", product.DiscountPrice ?? product.Price)</p>
                                    <a href="@Url.Action("Details", "Products", new { id = product.ProductID })" class="btn btn-primary">Xem chi tiết</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>